source :rubygems

gem "rails", "3.2.8"

### Configuration

# Thin web server
gem "thin", "~> 1.5"
# HAML templating engine
gem "haml-rails", "~> 0.3"

### Assets

group :assets do
  # JavaScript
  gem "jquery-rails", "~> 2.1"
  gem "coffee-rails", "~> 3.2"
  gem "uglifier", "~> 1.3"

  # CSS
  gem "sass-rails",   "~> 3.2"
  gem "compass-rails", "~> 1.0"
  gem "bootstrap-sass", "~> 2.1"
end

### Environment Specific

group :development, :test do
  gem "rspec-rails", "~> 2.11"
  gem "capybara", "~> 1.1"
  gem "fuubar", "~> 1.1"
end
