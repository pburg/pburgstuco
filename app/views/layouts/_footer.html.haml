- content_for :github_link do
  Version
  = link_to @version, @changelog_link
  - if ENV["SERVER"] == "development"
    \- Development Server

- content_for :copyright do
  -# Show links to launch the current page on one of the servers when running
  -# in development mode. Show the normal copyright otherwise.
  - if Rails.env.development?
    Launch:
    = link_to "Development",
              "http://pburgstuco-dev.herokuapp.com#{request.fullpath}"
    |
    = link_to "Production",
              "http://pburgstuco.herokuapp.com#{request.fullpath}"
  - elsif ENV["SERVER"] == "development"
    = link_to "Launch Production",
              "http://pburgstuco.herokuapp.com#{request.fullpath}"
  - else
    Copyright Â©2012 Vinny Diehl

- content_for :contact_link do
  = link_to "Contact Us", contact_path

.footer

  -# On most screens the footer text will distribute evenly across the bottom.
  -# On phones, it will appear stacked at the bottom.

  .hidden-phone
    .left
      = yield :github_link
    = yield :copyright
    .right
      = yield :contact_link

  .visible-phone
    = yield :github_link
    %br/
    = yield :copyright
    %br/
    = yield :contact_link
